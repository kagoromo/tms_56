<% provide :title, t(:home) %>
<% if user_signed_in? %>
  <section class="user_info">
    <%= render "shared/user_info" %>
  </section>
  <section class="stats">
    <%= render "shared/stats" %>
  </section>
<% else %>
  <div class="center jumbotron">
    <h1><%= t :welcome %></h1>
  </div>
  <%= link_to t(:sign_up_now), new_user_registration_path,
    class: "btn btn-lg btn-primary" %>
<% end %>  
