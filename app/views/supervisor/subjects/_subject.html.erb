<div class="row">
  <div class="col-md-8 col-md-offset-1">
    <h3>
      <%= link_to subject.content, supervisor_subject_path(subject) %>
    </h3>
    <p><%= subject.description %></p>
  </div>
  <div class="col-md-2">
    <div class="form-group">
      <br><%= link_to t("subject.view_subject"),
        supervisor_subject_path(subject),
        class: "btn btn-primary col-md-12" %>
    </div>
    <div class="form-group">
      <br><%= link_to t("subject.edit"),
        edit_supervisor_subject_path(subject),
        class: "btn btn-success col-md-12" %>
    </div>
    <div class="form-group">
      <br><%= link_to t("subject.delete"),
        supervisor_subject_path(subject),
        method: :delete, data: {confirm: t("subject.confirm")},
        class: "btn btn-danger col-md-12" %>
    </div>
  </div>
</div>
<hr>
